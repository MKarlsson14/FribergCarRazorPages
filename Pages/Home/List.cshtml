<h1>Availible Cars</h1>


<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                Brand
            </th>
            <th>
                Model
            </th>
            <th>
               Price Per Day
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Car)
        {
            <tr>
                <td>
                    <img src="@Url.Content(item.Picture1)" width="100" />
                    @* @Html.DisplayFor(modelItem => item.Pictures.ElementAt(0)) *@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <button class="button">
                        <a asp-page="./Details" asp-route-id="@item.CarId">More Info</a>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
