@page
@model FribergCarRazorPages.Pages.Admin.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}
@if (Model.Customer.Count > 0)
{    
<p>
<button class="buttonFunction">
    <a asp-page="Create">Create New Customer</a>
</button>
    <button>
        <a asp-page="/Admin/IndexAdmin">&nbsp; Back</a>
    </button>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].CustomerPassword)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerPassword)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CustomerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CustomerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
<button>
    <h1>No Current Customers</h1>
</button>
}